<div class="row sponsor-main">
  <div class="small-12 columns">
    <h4>All Races</h4>

    <table class="races-table" href="#Races">
      <thead>
        <tr>
          <th class="show-for-large">Name</th>
          <th>Date</th>
          <th>Time</th>
          <th>Location</th>
          <th></th>
        </th>
      </thead>
      <tbody>
        {{#each races }}
        {{#if nextRace}}
          <tr class="next-race">
        {{else}}
          <tr>
        {{/if}}
            <td class="show-for-large">{{ name }}</td>
            <td class="date-slash">{{ date }}</td>
            <td>{{ startTime }}</td>
            <td>{{ venue.name }}</td>
            <td>
              <a href="/RaceInfo/{{ seodate }}">Info</a>
              {{#if results }}
              &nbsp;
                <a href="/RaceInfo/{{ seodate }}">Results</a>
              {{/if}}
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
  <div class="small-12 columns">
    <hr/>
    {{#each sponsors}}
    <a href="{{ url }}" target="_blank" class="bottom-sponsor">
      <img class="sponsor-thumbnail" src="/uploads/{{ logoUrl }}"/>
    </a>
    {{/each}}
  </div>
</div>

