<div class="row show-for-medium">
  <div class="medium-11 medium-centered columns">
    <div class="owl-carousel hero-flipper"> 
      <div class="item">
        <div class="card row">
          <img class="card-background" src="/img/Banner-Utah-Race-Series.jpg" alt="Running!" />
          <div class="medium-12 columns">
            <h3>{{{ homepage.card1Text }}}</h3>
          </div>
        </div>
      </div>
      <div class="item">
        <div class="card row">
          <img class="card-background" src="/img/Homepage-background-photo-Utah-Race-Series.jpg" alt="Running!" />
          <div class="medium-12 columns">
            <h3>{{{ homepage.card2Text }}}</h3>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="row show-for-small-only">
  <div class="medium-11 medium-centered columns">
    <div class="owl-carousel hero-flipper-mobile"> 
      <div class="hero-flipper-item-mobile">
        <div class="medium-12 columns mobile-card-one">
          <h3>{{{ homepage.card1Text }}}</h3>
        </div>
      </div>
      <div class="hero-flipper-item-mobile">
        <div class="medium-12 columns mobile-card-two">
          <h3>{{{ homepage.card2Text }}}</h3>
        </div>
      </div>

    </div>
  </div>
</div>

<div class="row">
  <div class="medium-12 small-12 columns home-main">
    <div class="medium-12 columns">
      <div class="row">
        <div class="medium-8 small-12 columns">
          <div class="readmore-mobile">
            {{{ homepage.mainText }}}
          </div>
        </div>
        <div class="medium-3 small-12 columns center">
          <img src="/img/Yellow-Sign-with-Runner.png" alt="logo" />
          <a class="home-registration" href="/Registration" class="show-for-small-only">
            <span class="promoted-link">Series Registration</span>
          </a>
          <a class="home-races-link" href="#Races">
            <span>All Races</span>
          </a>
          <hr/>
          <a class="social-link" href="https://www.facebook.com/Utah-Race-Series-1576614149023076" target="_blank">
            <i class="fi-social-facebook"></i>
            Facebook
          </a>
          <a class="social-link" href="mailto:info@utahraceseries.com" target="_top">
            <i class="fi-mail"></i>
            Email Questions
          </a>
        </div>
      </div>
    </div>
  </div>
  <div class="medium-12 small-12 columns home-main">
    <div class="row home-races">
      <div class="medium-12 small-12 columns">
        <a name="Races"></a>
        <h2>Races</h2>
        <hr/>
        <table class="races-table" href="#Races">
          <thead>
            <tr>
              <th class="show-for-large">Name</th>
              <th>Date</th>
              <th>Time</th>
              <th>Location</th>
              <th></th>
            </th>
          </thead>
          <tbody>
            {{#each races }}
            {{#if nextRace}}
            <tr class="next-race">
              {{else}}
              <tr>
                {{/if}}
                <td class="show-for-large">{{ name }}</td>
                <td class="date-slash">{{ date }}</td>
                <td>{{ startTime }}</td>
                <td>{{ venue.name }}</td>
                <td>
                  {{#if resultsUrl }}
                  <a href="/race/{{ seodate }}">Results</a>
                  {{else}}
                  <a href="/race/{{ seodate }}">Info</a>
                  {{/if}}
                </td>
              </tr>
              {{/each}}
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>

</div>
