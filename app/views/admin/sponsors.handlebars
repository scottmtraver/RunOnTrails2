<div class="row admin-main">
  <div class="large-12 columns">
    <h4>Sponsors</h4>
    <a class="button" href="/admin/sponsor/0">New Sponsor</a>
    <table>
      <thead>
        <tr>
          <th>Sponsor</th>
          <th>Logo</th>
          <th>Link</th>
          <th></th>
        </th>
      </thead>
      <tbody>
        {{#each sponsors }}
          <tr>
            <td>{{ name }}</td>
            <td><img src="/uploads/{{ logoUrl }}" alt="Logo" class="admin-sponsor-logo" /></td>
            <td><a href="{{ url }}" target="_blank">{{ url }}</a></td>
            <td><a href="/admin/sponsor/{{ id }}">Edit</a></td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>

