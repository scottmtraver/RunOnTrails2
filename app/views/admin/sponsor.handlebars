<div class="row admin-main">
  <div class="large-12 columns">
    <h4>Create/Edit Sponsor</h4>
    <form method="post" action="/admin/sponsor" enctype="multipart/form-data" >
      <input type="hidden" name="id" value="{{ sponsor.id }}"/>
      <div class="row">
        <div class="large-12 columns">
          <label>Sponsor Name
            <input type="text" placeholder="(Name)" name="name" value="{{ sponsor.name }}" />
          </label>
        </div>
      </div>
      <div class="row">
        <div class="large-6 columns">
          <label>Link
            <input type="text" placeholder="(Url)" name="url" value="{{ sponsor.url }}"/>
          </label>
        </div>
        <div class="large-6 columns">
          <label>Logo
            <input type="file" placeholder="(Image)" name="fileupload"/>
            {{#if sponsor.logoUrl }}
            <img class="logo-tiny" src="/uploads/{{ sponsor.logoUrl }}" alt="Logo" />
            {{/if}}
          </label>
        </div>
      </div>
      <div class="row">
        <div class="large-12 columns">
          <input type="submit" value="Submit" class="button"/>
          <a href="/admin/sponsors" class="button">Cancel</a>
          <a data-open="deleteSponsorModal" class="button alert small">Delete</a>
        </div>
      </div>
    </form>
  </div>
</div>

<div class="reveal" id="deleteSponsorModal" data-reveal>
  <h5>Are you sure you want to delete this sponsor?</h5>
  <button class="button">Cancel</button>
  <a href="/admin/deleteSponsor/{{ sponsor.id }}" class="button alert">Delete</a>

  <button class="close-button" data-close aria-label="Close modal" type="button">
    <span aria-hidden="true">&times;</span>
  </button>
</div>
